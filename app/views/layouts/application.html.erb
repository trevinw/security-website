<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:html_title) ? "Security | #{yield(:html_title)}" : 'Security' %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="container-fluid p-3" data-controller="modal toast">
    <%= render '/shared/modal' %>
    <%= render '/shared/toast' %>

    <div class="row">
      <div class="col-2">
        <div class="sticky-top">
          <% if user_signed_in? %>
            <%= render '/shared/sidebar' %>
          <% end %>
        </div>
      </div>

      <div class="col-10">
        <% if notice %>
          <div id="notice-alert" class="alert alert-success"><%= notice %></div>
        <% end %>

        <% if alert %>
          <div class="alert alert-danger"><%= alert %></div>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
